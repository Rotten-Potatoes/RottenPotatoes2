<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainScreen">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rahul Raina"
        android:id="@+id/edit_profile"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="italic"
        android:onClick="onClickEditProfile"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sign Out"
        android:id="@+id/sign_out"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="italic"
        android:onClick="onClickSignOut"/>


    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Friends"
            android:layout_weight="0.5"
            android:id="@+id/friends_button"
            android:onClick="onClickFriends" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Groups"
            android:layout_weight="0.5"
            android:id="@+id/groups_button"
            android:onClick="onClickGroups"/>

    </LinearLayout>

    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchView"
        android:layout_below="@+id/sign_out"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/edit_profile"
        android:layout_toStartOf="@+id/edit_profile" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_weight="0.2"
        android:id="@+id/buttonsearch"
        android:layout_below="@+id/edit_profile"
        android:layout_alignLeft="@+id/edit_profile"
        android:layout_alignStart="@+id/edit_profile"
        android:onClick = "onClickSearch" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/buttonsearch"
    android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/titleofmovie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:text="" />
            <TextView android:id="@+id/yearofmovie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleofmovie"
                android:layout_marginLeft="10dp"
                android:text=""/>
            <TextView android:id="@+id/ratingofmovie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_toRightOf="@+id/titleofmovie"
                android:paddingLeft="10dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate this movie"
                android:layout_weight="0.2"
                android:visibility="invisible"
                android:id="@+id/buttonrate"
                android:layout_toRightOf="@+id/ratingofmovie"
                android:onClick = "onClickRate" />
        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>